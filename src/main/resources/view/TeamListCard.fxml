<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="10" bottom="8" left="15" />
            </padding>
            <HBox spacing="5" alignment="BASELINE_LEFT">
                <Label fx:id="id" styleClass="cell_big_label" />
                <Label fx:id="teamName" text="\$teamName" styleClass="cell_big_label" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Label styleClass="bullet_point" text="•"/>
                <Label fx:id="top" styleClass="cell_small_label, team_details_label" minWidth="60" prefWidth="60" maxWidth="60" alignment="CENTER"/>
                <Label fx:id="topRank" styleClass="cell_small_label, team_details_label" minWidth="90" prefWidth="90" maxWidth="90" alignment="CENTER"/>
                <Label fx:id="topName" styleClass="cell_small_label" minWidth="120" prefWidth="120" alignment="CENTER_LEFT" wrapText="false"/>
            </HBox>
            <!-- Jungle -->
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Label styleClass="bullet_point" text="•"/>
                <Label fx:id="jungle" styleClass="cell_small_label, team_details_label" minWidth="60" prefWidth="60" maxWidth="60" alignment="CENTER"/>
                <Label fx:id="jungleRank" styleClass="cell_small_label, team_details_label" minWidth="90" prefWidth="90" maxWidth="90" alignment="CENTER"/>
                <Label fx:id="jungleName" styleClass="cell_small_label" minWidth="120" prefWidth="120" alignment="CENTER_LEFT" wrapText="false"/>
            </HBox>
            <!-- Mid Lane -->
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Label styleClass="bullet_point" text="•"/>
                <Label fx:id="mid" styleClass="cell_small_label, team_details_label" minWidth="60" prefWidth="60" maxWidth="60" alignment="CENTER"/>
                <Label fx:id="midRank" styleClass="cell_small_label, team_details_label" minWidth="90" prefWidth="90" maxWidth="90" alignment="CENTER"/>
                <Label fx:id="midName" styleClass="cell_small_label" minWidth="120" prefWidth="120" alignment="CENTER_LEFT" wrapText="false"/>
            </HBox>
            <!-- ADC -->
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Label styleClass="bullet_point" text="•"/>
                <Label fx:id="adc" styleClass="cell_small_label, team_details_label" minWidth="60" prefWidth="60" maxWidth="60" alignment="CENTER"/>
                <Label fx:id="adcRank" styleClass="cell_small_label, team_details_label" minWidth="90" prefWidth="90" maxWidth="90" alignment="CENTER"/>
                <Label fx:id="adcName" styleClass="cell_small_label" minWidth="120" prefWidth="120" alignment="CENTER_LEFT" wrapText="false"/>
            </HBox>
            <!-- Support -->
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Label styleClass="bullet_point" text="•"/>
                <Label fx:id="support" styleClass="cell_small_label, team_details_label" minWidth="60" prefWidth="60" maxWidth="60" alignment="CENTER"/>
                <Label fx:id="supportRank" styleClass="cell_small_label, team_details_label" minWidth="90" prefWidth="90" maxWidth="90" alignment="CENTER"/>
                <Label fx:id="supportName" styleClass="cell_small_label" minWidth="120" prefWidth="120" alignment="CENTER_LEFT" wrapText="false"/>
            </HBox>
        </VBox>
    </GridPane>
</HBox>
