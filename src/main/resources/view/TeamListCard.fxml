<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="10" bottom="8" left="15" />
            </padding>
            <HBox spacing="5" alignment="BASELINE_LEFT">
                <Label fx:id="id" styleClass="cell_big_label" />
                <Label fx:id="teamName" text="\$teamName" styleClass="cell_big_label" />
            </HBox>
            <!-- Top -->
            <HBox fx:id="topPersonDetails" alignment="CENTER_LEFT" spacing="8" />
            <!-- Jungle -->
            <HBox fx:id="junglePersonDetails" alignment="CENTER_LEFT" spacing="8" />
            <!-- Mid Lane -->
            <HBox fx:id="midPersonDetails" alignment="CENTER_LEFT" spacing="8" />
            <!-- ADC -->
            <HBox fx:id="adcPersonDetails" alignment="CENTER_LEFT" spacing="8" />
            <!-- Support -->
            <HBox fx:id="supportPersonDetails" alignment="CENTER_LEFT" spacing="8" />
        </VBox>
    </GridPane>
</HBox>
