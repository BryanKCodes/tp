<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="10" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="BASELINE_LEFT">
        <Label fx:id="id" styleClass="cell_big_label" minWidth="30" prefWidth="30" maxWidth="30" />
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
      </HBox>
      <FlowPane fx:id="tags" hgap="4" vgap="4" />
      <FlowPane fx:id="details" hgap="8" vgap="4" />
    </VBox>
  </GridPane>
</HBox>
