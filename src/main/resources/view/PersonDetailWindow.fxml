<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root resizable="true" title="Player Details"
         type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">

    <icons>
        <Image url="@/images/address_book_32.png" />
    </icons>

    <scene>
        <Scene>
            <VBox spacing="10" style="-fx-background-color: #383838;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>

                <!-- Player Name -->
                <Label fx:id="nameLabel" text="Player Name" style="-fx-text-fill: white;">
                    <font>
                        <Font name="System Bold" size="24" />
                    </font>
                </Label>

                <!-- Player Details Section -->
                <VBox spacing="5">
                    <Label fx:id="roleLabel" text="Role: " style="-fx-text-fill: #d0d0d0;">
                        <font>
                            <Font size="14" />
                        </font>
                    </Label>

                    <Label fx:id="championLabel" text="Champion: " style="-fx-text-fill: #d0d0d0;">
                        <font>
                            <Font size="14" />
                        </font>
                    </Label>

                    <Label fx:id="rankLabel" text="Rank: " style="-fx-text-fill: #d0d0d0;">
                        <font>
                            <Font size="14" />
                        </font>
                    </Label>

                    <Label fx:id="winsLabel" text="Wins: " style="-fx-text-fill: #d0d0d0;">
                        <font>
                            <Font size="14" />
                        </font>
                    </Label>

                    <Label fx:id="lossesLabel" text="Losses: " style="-fx-text-fill: #d0d0d0;">
                        <font>
                            <Font size="14" />
                        </font>
                    </Label>

                    <Label fx:id="tagsLabel" text="Tags: " style="-fx-text-fill: #d0d0d0;">
                        <font>
                            <Font size="14" />
                        </font>
                    </Label>

                    <Label fx:id="statsLabel" text="Average Performance Score: " style="-fx-text-fill: #d0d0d0;">
                        <font>
                            <Font name="System Bold" size="16" />
                        </font>
                    </Label>
                </VBox>

                <!-- Performance Score Graph -->
                <LineChart fx:id="performanceChart" prefHeight="200" prefWidth="800" animated="false"
                          style="-fx-text-fill: white;">
                    <xAxis>
                        <NumberAxis label="Match Number" side="BOTTOM"
                                   style="-fx-tick-label-fill: white; -fx-minor-tick-visible: false;" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Performance Score" side="LEFT"
                                   style="-fx-tick-label-fill: white; -fx-minor-tick-visible: false;" />
                    </yAxis>
                </LineChart>

                <!-- CS per Minute Graph -->
                <LineChart fx:id="csChart" prefHeight="200" prefWidth="800" animated="false"
                          style="-fx-text-fill: white;">
                    <xAxis>
                        <NumberAxis label="Match Number" side="BOTTOM"
                                   style="-fx-tick-label-fill: white; -fx-minor-tick-visible: false;" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="CS per Minute" side="LEFT"
                                   style="-fx-tick-label-fill: white; -fx-minor-tick-visible: false;" />
                    </yAxis>
                </LineChart>

                <!-- KDA Graph -->
                <LineChart fx:id="kdaChart" prefHeight="200" prefWidth="800" animated="false"
                          style="-fx-text-fill: white;">
                    <xAxis>
                        <NumberAxis label="Match Number" side="BOTTOM"
                                   style="-fx-tick-label-fill: white; -fx-minor-tick-visible: false;" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="KDA" side="LEFT"
                                   style="-fx-tick-label-fill: white; -fx-minor-tick-visible: false;" />
                    </yAxis>
                </LineChart>

                <!-- Gold Diff @15 Graph -->
                <LineChart fx:id="goldChart" prefHeight="200" prefWidth="800" animated="false"
                          style="-fx-text-fill: white;">
                    <xAxis>
                        <NumberAxis label="Match Number" side="BOTTOM"
                                   style="-fx-tick-label-fill: white; -fx-minor-tick-visible: false;" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Gold Diff @15" side="LEFT"
                                   style="-fx-tick-label-fill: white; -fx-minor-tick-visible: false;" />
                    </yAxis>
                </LineChart>

            </VBox>
        </Scene>
    </scene>
</fx:root>
