<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root resizable="true" title="Player Details"
         type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">

    <icons>
        <Image url="@/images/address_book_32.png" />
    </icons>

    <scene>
        <Scene>
            <stylesheets>
                <URL value="@DarkTheme.css" />
                <URL value="@Extensions.css" />
            </stylesheets>

            <VBox spacing="20" style="-fx-background-color: #383838;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>

                <!-- Static Component: Main Name Label -->
                <Label fx:id="nameLabel" styleClass="label-header" />

                <!-- Static Component: Details Pane using a GridPane for clean alignment -->
                <GridPane fx:id="detailsPane" hgap="10" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="80"/> <!-- Column 0 for keys -->
                        <ColumnConstraints hgrow="ALWAYS" /> <!-- Column 1 for values -->
                    </columnConstraints>

                    <!-- Row 0: Role -->
                    <Label styleClass="detail-key-label" text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label fx:id="roleLabel" styleClass="detail-value-label" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <!-- Row 1: Rank -->
                    <Label styleClass="detail-key-label" text="Rank:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label fx:id="rankLabel" styleClass="detail-value-label" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <!-- Row 2: Champion -->
                    <Label styleClass="detail-key-label" text="Champion:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <Label fx:id="championLabel" styleClass="detail-value-label" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <!-- Row 3: Wins -->
                    <Label styleClass="detail-key-label" text="Wins:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <Label fx:id="winsLabel" styleClass="detail-value-label" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <!-- Row 4: Losses -->
                    <Label styleClass="detail-key-label" text="Losses:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <Label fx:id="lossesLabel" styleClass="detail-value-label" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <!-- Row 5: Tags -->
                    <Label styleClass="detail-key-label" text="Tags:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <Label fx:id="tagsLabel" styleClass="detail-value-label" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <!-- Row 6: Performance Score -->
                    <Label styleClass="detail-key-label" text="Performance:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                    <Label fx:id="performanceLabel" styleClass="detail-value-label" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                </GridPane>

                <!-- Static Component: Container for Dynamic Content -->
                <!-- This GridPane displays charts in a 2x2 layout with designated containers. -->
                <GridPane hgap="15" vgap="15" VBox.vgrow="ALWAYS">
                    <!-- Row 0, Column 0: Performance Chart -->
                    <VBox fx:id="performanceChartPane" VBox.vgrow="ALWAYS" GridPane.rowIndex="0" GridPane.columnIndex="0" />

                    <!-- Row 0, Column 1: CS/min Chart -->
                    <VBox fx:id="csChartPane" VBox.vgrow="ALWAYS" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <!-- Row 1, Column 0: KDA Chart -->
                    <VBox fx:id="kdaChartPane" VBox.vgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="0" />

                    <!-- Row 1, Column 1: Gold Diff Chart -->
                    <VBox fx:id="goldDiffChartPane" VBox.vgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                </GridPane>

            </VBox>
        </Scene>
    </scene>
</fx:root>

